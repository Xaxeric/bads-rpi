[Unit]
Description=BADS Flask Camera Server for ESP32
After=network.target
Wants=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/opt/bads-rpi
ExecStart=/usr/bin/python3 /opt/bads-rpi/http/flask_camera_server.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Environment variables
Environment=PYTHONPATH=/opt/bads-rpi

# Resource limits for Pi Zero 2W
LimitNOFILE=1024
MemoryMax=256M

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/opt/bads-rpi

[Install]
WantedBy=multi-user.target